@model IEnumerable<PapisPowerPracticeMvc.ViewModels.MuscleGroupViewModel>

@{
    ViewData["Title"] = "Muskelgrupphantering";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Muskelgrupphantering</h2>

    <div class="text-end mb-3">
        <a asp-area="Admin" asp-controller="MuscleGroups" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle">Lägg till muskelgrupp</i>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }

    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Namn</th>
                <th>Bild</th>
                <th>Åtgärder</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var group in Model)
                {
                    <tr>
                        <td>@group.Id</td>
                        <td>@group.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(group.ImageUrl))
                            {
                                <img src="@group.ImageUrl" alt="@group.Name" width="80" height="80" style="object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-muted">Ingen bild</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-area="Admin" asp-controller="MuscleGroups" asp-action="Edit" asp-route-id="@group.Id" class="btn btn-sm btn-warning me-2">
                                Redigera
                            </a>

                            <!-- Ta bort-knapp öppnar modal -->
                            <button class="btn btn-sm btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteModal"
                                    data-id="@group.Id"
                                    data-name="@group.Name">
                                Ta bort
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Inga muskelgrupper hittades.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bekräftelsemodal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Bekräfta borttagning</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Är du säker på att du vill ta bort <strong id="muscleGroupName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                    <button type="submit" class="btn btn-danger">Ta bort</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = document.getElementById('confirmDeleteModal');
        modal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const groupId = button.getAttribute('data-id');
            const groupName = button.getAttribute('data-name');

            const namePlaceholder = modal.querySelector('#muscleGroupName');
            const form = modal.querySelector('#deleteForm');

            namePlaceholder.textContent = groupName;
            form.action = `/Admin/MuscleGroups/Delete/${groupId}`;
        });
    </script>
}