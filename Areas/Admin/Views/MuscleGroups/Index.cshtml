@model IEnumerable<PapisPowerPracticeMvc.ViewModels.MuscleGroupViewModel>

@{
    ViewData["Title"] = "Muskelgrupphantering";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Muskelgrupphantering</h2>

    <div class="text-end mb-3">
        <a asp-area="Admin" asp-controller="MuscleGroups" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle">Lägg till muskelgrupp</i>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
			@TempData["SuccessMessage"]
        </div>
    }

    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Namn</th>
                <th>Bild</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>@group.Id</td>
                    <td>@group.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(group.ImageUrl))
                        {
                            <img src="@group.ImageUrl" alt="@group.Name" width="80" height="80" style="object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Ingen bild</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-sm btn-warning">Redigera</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
