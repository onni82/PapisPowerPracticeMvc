@model PapisPowerPracticeMvc.ViewModels.MuscleGroupViewModel

@{
	ViewData["Title"] = "Redigera muskelgrupp";
}

<div class="container mt-5">
	<h2 class="mb-4">Redigera muskelgrupp</h2>

	<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
		<div class="mb-3">
			<label asp-for="Name" class="form-label">Namn</label>
			<input asp-for="Name" class="form-control" required />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="ImageUrl" class="form-label">Bild-URL</label>
			<input asp-for="ImageUrl" class="form-control" required />
			<span asp-validation-for="ImageUrl" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Spara ändringar</button>
		<a asp-action="Index" class="btn btn-secondary ms-2">Avbryt</a>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
