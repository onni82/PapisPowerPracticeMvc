@model PapisPowerPracticeMvc.ViewModels.ExerciseViewModel

@{
    ViewData["Title"] = "Redigera övning";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Redigera övning</h2>

    <form asp-action="Edit" method="post" class="mx-auto" style="max-width: 600px;">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="VideoUrl" class="form-label"></label>
            <input asp-for="VideoUrl" class="form-control" />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
            <button type="submit" class="btn btn-primary">Spara ändringar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}