@model PapisPowerPracticeMvc.ViewModels.ExercisePageViewModel

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-center mb-4 fw-bold text-primary">Hantera övningar</h2>
    </div>
    @if(TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Message"]
        </div>
    }
    else if(TempData["error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["error"]
        </div>
    }
    @if (Model.Exercises.Any())
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Namn</th>
                    <th scope="col">Beskrivning</th>
                    <th scope="col">Muskelgrupp</th>
                    <th scope="col">VideoUrl</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exercise in Model.Exercises)
                {
                    <tr>
                        <td>@exercise.Id</td>
                        <td>@exercise.Name</td>
                        <td>@exercise.Description</td>
                        <td>@string.Join(", ", exercise.MuscleGroups)</td>
                        <td>@exercise.VideoUrl</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            inga övningar tillgänliga
        </div>
    }

    <hr class="my-4" />

    <h4 class="mb-3">Lägg till ny övning</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-area="Admin" asp-controller="Exercise" method="post" asp-action="Create" class="card p-4 shadow-sm border-0">
        <div class="mb-3">
            <label asp-for="NewExercise.Name" class="form-label"></label>
            <input asp-for="NewExercise.Name" class="form-control" required />
            <span asp-validation-for="NewExercise.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewExercise.Description" class="form-label"></label>
            <textarea asp-for="NewExercise.Description" class="form-control" required></textarea>
            <span asp-validation-for="NewExercise.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewExercise.VideoUrl" class="form-label"></label>
            <input asp-for="NewExercise.VideoUrl" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Muskelgrupper</label>
            <div>
                @foreach (var mg in Model.NewExercise.AvailableMuscleGroups)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"
                               name="NewExercise.SelectedMuscleGroupIds"
                               value="@mg.Id"  required/>
                        <label class="form-check-label">@mg.Name</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Spara</button>
    </form>
</div>
