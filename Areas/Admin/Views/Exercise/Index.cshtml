@model PapisPowerPracticeMvc.ViewModels.ExercisePageViewModel

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-center mb-4 fw-bold text-primary">Hantera övningar</h2>
    </div>
    @if(TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Message"]
        </div>
    }
    else if(TempData["error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["error"]
        </div>
    }
    @if (Model.Exercises.Any())
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Namn</th>
                    <th scope="col">Beskrivning</th>
                    <th scope="col">Muskelgrupp</th>
                    <th scope="col">VideoUrl</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exercise in Model.Exercises)
                {
                    <tr>
                        <td>@exercise.Id</td>
                        <td>@exercise.Name</td>
                        <td>@exercise.Description</td>
                        <td>@string.Join(", ", exercise.MuscleGroups)</td>
                        <td>@exercise.VideoUrl</td>

                        <td class="text-center">
                            <a asp-area="Admin" asp-controller="Exercise" asp-action="Edit" asp-route-id="@exercise.Id" class="btn btn-sm btn-warning me-2">
                                Redigera
                            </a>

                            <!-- Ta bort-knapp öppnar modal -->
                            <button class="btn btn-sm btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteModal"
                                    data-id="@exercise.Id"
                                    data-name="@exercise.Name">
                                Ta bort
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            inga övningar tillgänliga
        </div>
    }

    <hr class="my-4" />

    <h4 class="mb-3">Lägg till ny övning</h4>

    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-area="Admin" asp-controller="Exercise" method="post" asp-action="Create" class="card p-4 shadow-sm border-0">
        <div class="mb-3">
            <label asp-for="NewExercise.Name" class="form-label"></label>
            <input asp-for="NewExercise.Name" class="form-control" required />
            <span asp-validation-for="NewExercise.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewExercise.Description" class="form-label"></label>
            <textarea asp-for="NewExercise.Description" class="form-control" required></textarea>
            <span asp-validation-for="NewExercise.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewExercise.VideoUrl" class="form-label"></label>
            <input asp-for="NewExercise.VideoUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Muskelgrupper</label>
            <div>
                @foreach (var mg in Model.NewExercise.AvailableMuscleGroups)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"
                               name="NewExercise.SelectedMuscleGroupIds"
                               value="@mg.Id"/>
                        <label class="form-check-label">@mg.Name</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Spara</button>
    </form>
</div>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Bekräfta borttagning</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Är du säker på att du vill ta bort <strong id="exerciseName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                    <button type="submit" class="btn btn-danger">Ta bort</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = document.getElementById('confirmDeleteModal');
        modal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const groupId = button.getAttribute('data-id');
            const groupName = button.getAttribute('data-name');

            const namePlaceholder = modal.querySelector('#exerciseName');
            const form = modal.querySelector('#deleteForm');

            namePlaceholder.textContent = groupName;
            form.action = `/Admin/Exercise/Delete/${groupId}`;
        });
    </script>
    }
