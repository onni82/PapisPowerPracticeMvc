@model PapisPowerPracticeMvc.Models.WorkoutLogViewModel
@{
    ViewData["Title"] = "Workout Log";
}

<h1>Workout Log</h1>

<div class="row">
    <div class="col-md-4">
        <h3>Add Exercise</h3>
        <div class="form-group">
            <select id="exerciseSelect" class="form-control">
                <option value="">Select an exercise...</option>
                @foreach (var exercise in Model.AvailableExercises)
                {
                    <option value="@exercise.Id">@(exercise?.Name ?? "Unknown Exercise")</option>
                }
            </select>
        </div>
        <button id="addExerciseBtn" class="btn btn-primary">Add Exercise</button>
    </div>
    
    <div class="col-md-8">
        <h3>Today's Workout</h3>
        <div id="workoutEntries">
            <!-- Workout entries will be added here dynamically -->
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Document ready');
    
    document.getElementById('addExerciseBtn').addEventListener('click', function() {
        console.log('Button clicked');
        const exerciseId = document.getElementById('exerciseSelect').value;
        console.log('Exercise ID:', exerciseId);
        
        if (exerciseId) {
            fetch('@Url.Action("AddExercise")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'exerciseId=' + exerciseId
            })
            .then(response => response.text())
            .then(data => {
                console.log('Success:', data);
                document.getElementById('workoutEntries').innerHTML += data;
                document.getElementById('exerciseSelect').value = '';
            })
            .catch(error => {
                console.log('Error:', error);
                alert('Error adding exercise');
            });
        } else {
            alert('Please select an exercise');
        }
    });
    
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('add-set-btn')) {
            const setTemplate = e.target.parentElement.querySelector('.set-template').innerHTML;
            e.target.closest('.workout-entry').querySelector('.sets-container').innerHTML += setTemplate;
            
            // Update set numbers
            const container = e.target.closest('.workout-entry').querySelector('.sets-container');
            const setRows = container.querySelectorAll('.set-row');
            setRows.forEach((row, index) => {
                const label = row.querySelector('label');
                if (label) {
                    label.textContent = 'Set ' + (index + 1);
                }
            });
        }
        
        if (e.target.classList.contains('remove-set-btn')) {
            e.target.closest('.set-row').remove();
        }
        
        if (e.target.classList.contains('remove-exercise-btn')) {
            e.target.closest('.workout-entry').remove();
        }
    });
    
    console.log('Script loaded');
});
</script>