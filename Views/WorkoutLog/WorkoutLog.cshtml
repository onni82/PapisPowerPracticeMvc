@model PapisPowerPracticeMvc.Models.WorkoutLogViewModel
@{
    ViewData["Title"] = "Workout Log";
}

<h1>Workout Log</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" id="successAlert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <h3>Add Exercise</h3>
        <div class="form-group mb-3">
            <label>Select Muscle Group:</label>
            <select id="muscleGroupSelect" class="form-control">
                <option value="">Select a muscle group...</option>
                @foreach (var muscleGroup in Model.MuscleGroups)
                {
                    <option value="@muscleGroup.Id">@muscleGroup.Name</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label>Select Exercise:</label>
            <select id="exerciseSelect" class="form-control" disabled>
                <option value="">Select a muscle group first...</option>
            </select>
        </div>
        <button id="addExerciseBtn" class="btn btn-primary" disabled>Add Exercise</button>
    </div>

    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Today's Workout</h3>
            <div>
                @if (Model.WorkoutLogId.HasValue)
                {
                    <span>Workout In Progress</span>
                    <form method="post" action="@Url.Action("EndWorkout")" style="display: inline;" onsubmit="collectWorkoutData(event)">
                        <input type="hidden" name="workoutData" id="workoutDataInput">
                        <button type="submit" class="btn btn-danger ms-2">End Workout</button>
                    </form>
                }
                else
                {
                    <span>No Active Workout</span>
                }
            </div>
        </div>
        @if (Model.WorkoutLogId.HasValue)
        {
            <input type="hidden" id="WorkoutLogId" value="@Model.WorkoutLogId.Value"/>
        }
        <div id="workoutEntries">
        </div>
        <div class="mt-3" id="saveWorkoutSection" style="display: none;">
            <form method="post" action="@Url.Action("Create")" onsubmit="collectWorkoutData(event)">
                @Html.AntiForgeryToken()
                <input type="hidden" name="workoutData" id="workoutDataInput2">
                <button type="submit" class="btn btn-success">Save Workout</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-hide success alert after 3 seconds
        const successAlert = document.getElementById('successAlert');
        if (successAlert) {
            setTimeout(() => {
                successAlert.style.display = 'none';
            }, 3000);
        }
        
        // Restore workout data from session storage
        restoreWorkoutData();

        // Handle muscle group selection
        document.getElementById('muscleGroupSelect').addEventListener('change', function() {
            const muscleGroupId = this.value;
            const exerciseSelect = document.getElementById('exerciseSelect');
            const addExerciseBtn = document.getElementById('addExerciseBtn');

            if (muscleGroupId) {
                fetch(`@Url.Action("GetExercisesByMuscleGroup")?muscleGroupId=${muscleGroupId}`)
                    .then(response => response.json())
                    .then(exercises => {
                        exerciseSelect.innerHTML = '<option value="">Select an exercise...</option>';
                        exercises.forEach(exercise => {
                            exerciseSelect.innerHTML += `<option value="${exercise.id}">${exercise.name}</option>`;
                        });
                        exerciseSelect.disabled = false;
                    })
                    .catch(error => {
                        console.error('Error loading exercises:', error);
                        exerciseSelect.innerHTML = '<option value="">Error loading exercises</option>';
                    });
            } else {
                exerciseSelect.innerHTML = '<option value="">Select a muscle group first...</option>';
                exerciseSelect.disabled = true;
                addExerciseBtn.disabled = true;
            }
        });

        // Handle exercise selection
        document.getElementById('exerciseSelect').addEventListener('change', function() {
            const addExerciseBtn = document.getElementById('addExerciseBtn');
            addExerciseBtn.disabled = !this.value;
        });

        document.getElementById('addExerciseBtn').addEventListener('click', function() {
            const exerciseId = document.getElementById('exerciseSelect').value;

            if (exerciseId) {
                fetch('@Url.Action("AddExercise")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'exerciseId=' + exerciseId
                })
                .then(response => response.text())
                .then(data => {
                    const container = document.getElementById('workoutEntries');
                    container.insertAdjacentHTML('beforeend', data);
                    document.getElementById('exerciseSelect').value = '';
                    document.getElementById('saveWorkoutSection').style.display = 'block';
                    saveWorkoutData();
                })
                .catch(error => {
                    alert('Error adding exercise');
                });
            } else {
                alert('Please select an exercise');
            }
        });

        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('add-set-btn')) {
                const workoutEntry = e.target.closest('.workout-entry');
                const container = workoutEntry.querySelector('.sets-container');
                const template = workoutEntry.querySelector('.set-template').innerHTML;
                container.insertAdjacentHTML('beforeend', template);

                updateSetNumbers(container);
            }
            if (e.target.classList.contains('add-warmupset-btn')){

                const workoutEntry = e.target.closest('.workout-entry');
                const container = workoutEntry.querySelector('.sets-container');
                const template = workoutEntry.querySelector('.warmup-template').innerHTML;

                container.insertAdjacentHTML('beforeend', template);

                updateSetNumbers(container);
            }

            if (e.target.classList.contains('remove-set-btn')) {
                const workoutEntry = e.target.closest('.workout-entry');
                const container = workoutEntry.querySelector('.sets-container');
                e.target.closest('.set-row').remove();
                updateSetNumbers(container);
            }

            if (e.target.classList.contains('remove-exercise-btn')) {
                e.target.closest('.workout-entry').remove();
                saveWorkoutData();
            }
        });
        
        // Save data when inputs change
        document.addEventListener('input', function(e) {
            if (e.target.matches('.workout-entry input')) {
                saveWorkoutData();
            }
        });
    });
    
    function saveWorkoutData() {
        const workoutEntries = document.getElementById('workoutEntries');
        if (workoutEntries) {
            const data = {
                html: workoutEntries.innerHTML,
                values: []
            };
            
            // Save input values
            workoutEntries.querySelectorAll('input').forEach((input, index) => {
                data.values.push({
                    index: index,
                    value: input.value
                });
            });
            
            sessionStorage.setItem('workoutData', JSON.stringify(data));
            if (workoutEntries.children.length > 0) {
                sessionStorage.setItem('showSaveSection', 'true');
            }
        }
    }
    
    function restoreWorkoutData() {
        const savedDataStr = sessionStorage.getItem('workoutData');
        const showSave = sessionStorage.getItem('showSaveSection');
        
        if (savedDataStr) {
            const savedData = JSON.parse(savedDataStr);
            document.getElementById('workoutEntries').innerHTML = savedData.html;
            
            // Restore input values
            const inputs = document.getElementById('workoutEntries').querySelectorAll('input');
            savedData.values.forEach(item => {
                if (inputs[item.index]) {
                    inputs[item.index].value = item.value;
                }
            });
        }
        
        if (showSave === 'true') {
            document.getElementById('saveWorkoutSection').style.display = 'block';
        }
    }

    function updateSetNumbers(container)
        {
          sortWarmupFirst(container);

          const rows = container.querySelectorAll('.set-row');
          let counter = 1;
             rows.forEach(row => {
             const label = row.querySelector('label');
                    if (row.classList.contains("warmup")) {
                    label.textContent = "Warm-up";
                    }
                    else{
                        label.textContent = "Set " + counter;
                        counter++;
                    }
             });
        }

    function collectWorkoutData(event) {
        console.log('collectWorkoutData called');


        const exercises = [];

        document.querySelectorAll('.workout-entry').forEach(entry => {
            const exerciseId = parseInt(entry.getAttribute("data-exercise-id"));
            const exercise = {
                ExerciseId: exerciseId,
                Sets: []
            };

            entry.querySelectorAll(".set-row").forEach(row => {
                const reps = row.querySelector('input[placeholder="Reps"]').value;
                const weight = row.querySelector('input[placeholder*="Weight"]').value;
                
                if(!reps || !weight)
                {
                    return;
                }
                
                const IsWarmup = row.classList.contains("warmup");

                exercise.Sets.push({
                    Reps: parseInt(reps),
                    Weight: parseFloat(weight),
                    IsWarmup: IsWarmup
                });

            });
            if(exercise.Sets.length > 0) {
                    exercises.push(exercise);
                }


        });

        const json = JSON.stringify(exercises);

        console.log("Final json sent to backend");
        console.log(json);

        // const workoutData = workoutEntries.join('\n');
        const input1 = document.getElementById('workoutDataInput');
        const input2 = document.getElementById('workoutDataInput2');
        if (input1) input1.value = json;
        if (input2) input2.value = json;
        
        // Clear session storage after form submission
        setTimeout(() => {
            sessionStorage.removeItem('workoutData');
            sessionStorage.removeItem('showSaveSection');
        }, 100);

    }
    function sortWarmupFirst(container){
        const rows = Array.from(container.querySelectorAll('.set-row'));

        const warmups = rows.filter(r => r.classList.contains('warmup'));
        const sets = rows.filter(r => !r.classList.contains('warmup'));

        container.innerHTML = "";

        warmups.forEach(r => container.appendChild(r));
        sets.forEach(r => container.appendChild(r));

    }
</script>