@model PapisPowerPracticeMvc.Models.WorkoutLogViewModel
@{
    ViewData["Title"] = "Workout Log";
}

<h1>Workout Log</h1>

<div class="row">
    <div class="col-md-4">
        <h3>Add Exercise</h3>
        <div class="form-group">
            <select id="exerciseSelect" class="form-control">
                <option value="">Select an exercise...</option>
                @foreach (var exercise in Model.AvailableExercises)
                {
                    <option value="@exercise.Id">@(exercise?.Name ?? "Unknown Exercise")</option>
                }
            </select>
        </div>
        <button id="addExerciseBtn" class="btn btn-primary">Add Exercise</button>
    </div>
    
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Today's Workout</h3>
            <div>
                @if (Model.WorkoutLogId.HasValue)
                {
                    <span>Workout In Progress</span>
                    <form method="post" action="@Url.Action("EndWorkout")" style="display: inline;" onsubmit="collectWorkoutData(event)">
                        <input type="hidden" name="workoutData" id="workoutDataInput">
                        <button type="submit" class="btn btn-danger ms-2">End Workout</button>
                    </form>
                }
                else
                {
                    <span>No Active Workout</span>
                }
            </div>
        </div>
        <div id="workoutEntries">
            
        </div>
        <div class="mt-3" id="saveWorkoutSection" style="display: none;">
            <form method="post" action="@Url.Action("EndWorkout")" onsubmit="collectWorkoutData(event)">
                <input type="hidden" name="workoutData" id="workoutDataInput">
                <button type="submit" class="btn btn-success">Save Workout</button>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    
    document.getElementById('addExerciseBtn').addEventListener('click', function() {
        const exerciseId = document.getElementById('exerciseSelect').value;
        
        if (exerciseId) {
            fetch('@Url.Action("AddExercise")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'exerciseId=' + exerciseId
            })
            .then(response => response.text())
            .then(data => {
                document.getElementById('workoutEntries').innerHTML += data;
                document.getElementById('exerciseSelect').value = '';
                document.getElementById('saveWorkoutSection').style.display = 'block';
            })
            .catch(error => {
                alert('Error adding exercise');
            });
        } else {
            alert('Please select an exercise');
        }
    });
    
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('add-set-btn')) {
            const setTemplate = e.target.parentElement.querySelector('.set-template').innerHTML;
            e.target.closest('.workout-entry').querySelector('.sets-container').innerHTML += setTemplate;
            
            // Update set numbers
            const container = e.target.closest('.workout-entry').querySelector('.sets-container');
            const setRows = container.querySelectorAll('.set-row');
            setRows.forEach((row, index) => {
                const label = row.querySelector('label');
                if (label) {
                    label.textContent = 'Set ' + (index + 1);
                }
            });
        }
        
        if (e.target.classList.contains('remove-set-btn')) {
            e.target.closest('.set-row').remove();
        }
        
        if (e.target.classList.contains('remove-exercise-btn')) {
            e.target.closest('.workout-entry').remove();
        }
    });
});

function collectWorkoutData(event) {
    const workoutEntries = [];
    document.querySelectorAll('.workout-entry').forEach(entry => {
        const exerciseName = entry.querySelector('h5').textContent;
        const sets = [];
        entry.querySelectorAll('.set-row').forEach(setRow => {
            const reps = setRow.querySelector('input[placeholder="Reps"]').value;
            const weight = setRow.querySelector('input[placeholder*="Weight"]').value;
            if (reps && weight) {
                sets.push(reps + ' reps @@ ' + weight + 'kg');
            }
        });
        if (sets.length > 0) {
            workoutEntries.push(exerciseName + ': ' + sets.join(', '));
        }
    });
    
    document.getElementById('workoutDataInput').value = workoutEntries.join('\n');
}
</script>