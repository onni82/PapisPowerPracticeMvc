@model PapisPowerPracticeMvc.Models.WorkoutLogViewModel
@{
    ViewData["Title"] = "Workout Log";
}

<h1>Workout Log</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" id="successAlert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <h3>Lägg till övning</h3>
        <div class="form-group mb-3">
            <label>Välj muskelgrupp:</label>
            <select id="muscleGroupSelect" class="form-control">
                <option value="">Välj en muskelgrupp...</option>
                @foreach (var muscleGroup in Model.MuscleGroups)
                {
                    <option value="@muscleGroup.Id">@muscleGroup.Name</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label>Välj övning:</label>
            <select id="exerciseSelect" class="form-control" disabled>
                <option value="">Välj en muskelgrupp först...</option>
            </select>
        </div>
        <button id="addExerciseBtn" class="btn btn-primary" disabled>Lägg till övning</button>
        <a asp-area="" asp-controller="WorkoutLog" asp-action="WorkoutLogsForUser"  class="btn btn-primary">
            Träningslog
        </a>
    </div>

    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Dagens träning</h3>
            <div>
                <span id="workoutStatus">Ingen aktiv träning</span>
                <form method="post" action="@Url.Action("EndWorkout")" style="display: none;" id="endWorkoutForm" onsubmit="clearWorkoutData(event)">
                    <input type="hidden" name="workoutData" id="workoutDataInput">
                    <button type="submit" class="btn btn-danger ms-2">Avsluta träning</button>
                </form>
            </div>
        </div>
        @if (Model.WorkoutLogId.HasValue)
        {
            <input type="hidden" id="WorkoutLogId" value="@Model.WorkoutLogId.Value"/>
        }
        <div id="workoutEntries">
        </div>
        <div class="mt-3" id="saveWorkoutSection" style="display: none;">
            <form method="post" action="@Url.Action("Create")" onsubmit="collectWorkoutData(event)">
                @Html.AntiForgeryToken()
                <input type="hidden" name="workoutData" id="workoutDataInput2">
                <button type="submit" class="btn btn-success">Spara träning</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-hide success alert after 3 seconds
        const successAlert = document.getElementById('successAlert');
        if (successAlert) {
            setTimeout(() => {
                successAlert.style.display = 'none';
            }, 3000);
        }
        
        // Restore workout data from session storage
        restoreWorkoutData();

        // Handle muscle group selection
        document.getElementById('muscleGroupSelect').addEventListener('change', function() {
            const muscleGroupId = this.value;
            const exerciseSelect = document.getElementById('exerciseSelect');
            const addExerciseBtn = document.getElementById('addExerciseBtn');

            if (muscleGroupId) {
                fetch(`@Url.Action("GetExercisesByMuscleGroup")?muscleGroupId=${muscleGroupId}`)
                    .then(response => response.json())
                    .then(exercises => {
                        exerciseSelect.innerHTML = '<option value="">Välj en övning...</option>';
                        exercises.forEach(exercise => {
                            exerciseSelect.innerHTML += `<option value="${exercise.id}">${exercise.name}</option>`;
                        });
                        exerciseSelect.disabled = false;
                    })
                    .catch(error => {
                        console.error('Error loading exercises:', error);
                        exerciseSelect.innerHTML = '<option value="">Fel vid laddning av övningar</option>';
                    });
            } else {
                exerciseSelect.innerHTML = '<option value="">Välj en muskelgrupp först...</option>';
                exerciseSelect.disabled = true;
                addExerciseBtn.disabled = true;
            }
        });

        // Handle exercise selection
        document.getElementById('exerciseSelect').addEventListener('change', function() {
            const addExerciseBtn = document.getElementById('addExerciseBtn');
            addExerciseBtn.disabled = !this.value;
        });

        document.getElementById('addExerciseBtn').addEventListener('click', function() {
            const exerciseId = document.getElementById('exerciseSelect').value;

            if (exerciseId) {
                fetch('@Url.Action("AddExercise")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'exerciseId=' + exerciseId
                })
                .then(response => response.text())
                .then(data => {
                    const container = document.getElementById('workoutEntries');
                    container.insertAdjacentHTML('beforeend', data);
                    document.getElementById('exerciseSelect').value = '';
                    document.getElementById('saveWorkoutSection').style.display = 'block';
                    
                    // Update workout status to show "Workout In Progress"
                    updateWorkoutStatus(true);
                    
                    saveWorkoutData();
                })
                .catch(error => {
                    alert('Fel vid tillägg av övning');
                });
            } else {
                alert('Vänligen välj en övning');
            }
        });

        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('add-set-btn')) {
                const workoutEntry = e.target.closest('.workout-entry');
                const container = workoutEntry.querySelector('.sets-container');
                const template = workoutEntry.querySelector('.set-template').innerHTML;
                container.insertAdjacentHTML('beforeend', template);

                updateSetNumbers(container);
            }
            if (e.target.classList.contains('add-warmupset-btn')){

                const workoutEntry = e.target.closest('.workout-entry');
                const container = workoutEntry.querySelector('.sets-container');
                const template = workoutEntry.querySelector('.warmup-template').innerHTML;

                container.insertAdjacentHTML('beforeend', template);

                updateSetNumbers(container);
            }

            if (e.target.classList.contains('remove-set-btn')) {
                const workoutEntry = e.target.closest('.workout-entry');
                const container = workoutEntry.querySelector('.sets-container');
                e.target.closest('.set-row').remove();
                updateSetNumbers(container);
            }

            if (e.target.classList.contains('remove-exercise-btn')) {
                e.target.closest('.workout-entry').remove();
                saveWorkoutData();
            }
        });
        
        // Save data when inputs change
        document.addEventListener('input', function(e) {
            if (e.target.matches('.workout-entry input')) {
                saveWorkoutData();
            }
        });
    });
    
    function saveWorkoutData() {
        const workoutEntries = document.getElementById('workoutEntries');
        if (workoutEntries) {
            // Store HTML using outerHTML to preserve encoding
            sessionStorage.setItem('workoutHTML', workoutEntries.outerHTML);
            
            // Store input values as simple array
            const values = [];
            workoutEntries.querySelectorAll('input').forEach(input => {
                values.push(input.value);
            });
            sessionStorage.setItem('workoutValues', values.join('|||'));
            
            if (workoutEntries.children.length > 0) {
                sessionStorage.setItem('showSaveSection', 'true');
            }
        }
    }
    
    function restoreWorkoutData() {
        const savedHTML = sessionStorage.getItem('workoutHTML');
        const savedValues = sessionStorage.getItem('workoutValues');
        const showSave = sessionStorage.getItem('showSaveSection');
        
        if (savedHTML) {
            // Create a temporary container to parse the HTML properly
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = savedHTML;
            const restoredContent = tempDiv.firstChild;
            
            // Replace the entire workoutEntries element
            const workoutEntries = document.getElementById('workoutEntries');
            workoutEntries.parentNode.replaceChild(restoredContent, workoutEntries);
            
            // Restore input values
            if (savedValues) {
                const values = savedValues.split('|||');
                const inputs = document.getElementById('workoutEntries').querySelectorAll('input');
                inputs.forEach((input, index) => {
                    if (values[index]) {
                        input.value = values[index];
                    }
                });
            }
            
            // Update workout status if there are exercises
            updateWorkoutStatus(true);
        }
        
        if (showSave === 'true') {
            document.getElementById('saveWorkoutSection').style.display = 'block';
        }
    }
    
    function updateWorkoutStatus(inProgress) {
        const statusSpan = document.getElementById('workoutStatus');
        const endWorkoutForm = document.getElementById('endWorkoutForm');
        
        if (statusSpan && endWorkoutForm) {
            if (inProgress) {
                statusSpan.textContent = 'Träning pågår';
                endWorkoutForm.style.display = 'inline';
            } else {
                statusSpan.textContent = 'Ingen aktiv träning';
                endWorkoutForm.style.display = 'none';
            }
        }
    }

    function updateSetNumbers(container)
        {
          sortWarmupFirst(container);

          const rows = container.querySelectorAll('.set-row');
          let counter = 1;
             rows.forEach(row => {
             const label = row.querySelector('label');
                    if (row.classList.contains("warmup")) {
                    label.textContent = "Uppvärmning";
                    }
                    else{
                        label.textContent = "Set " + counter;
                        counter++;
                    }
             });
        }

    function collectWorkoutData(event) {
        console.log('collectWorkoutData called');

        const exercises = [];
        const workoutEntries = document.querySelectorAll('.workout-entry');
        console.log('Found workout entries:', workoutEntries.length);

        workoutEntries.forEach(entry => {
            const exerciseId = parseInt(entry.getAttribute("data-exercise-id"));
            console.log('Processing exercise ID:', exerciseId);
            
            const exercise = {
                ExerciseId: exerciseId,
                Sets: []
            };

            const setRows = entry.querySelectorAll(".set-row");
            console.log('Found set rows:', setRows.length);
            
            setRows.forEach(row => {
                const repsInput = row.querySelector('input[placeholder="Reps"]');
                const weightInput = row.querySelector('input[placeholder*="Weight"]');
                
                const reps = repsInput ? repsInput.value : '';
                const weight = weightInput ? weightInput.value : '';
                
                console.log('Set data - Reps:', reps, 'Weight:', weight);
                
                if(!reps || !weight)
                {
                    console.log('Skipping set due to missing reps or weight');
                    return;
                }
                
                const IsWarmup = row.classList.contains("warmup");

                exercise.Sets.push({
                    Reps: parseInt(reps),
                    Weight: parseFloat(weight),
                    IsWarmup: IsWarmup
                });

            });
            
            console.log('Exercise sets count:', exercise.Sets.length);
            if(exercise.Sets.length > 0) {
                exercises.push(exercise);
            }
        });

        const json = JSON.stringify(exercises);
        console.log('Total exercises to save:', exercises.length);
        console.log("Final json sent to backend:");
        console.log(json);

        // const workoutData = workoutEntries.join('\n');
        const input1 = document.getElementById('workoutDataInput');
        const input2 = document.getElementById('workoutDataInput2');
        if (input1) input1.value = json;
        if (input2) input2.value = json;
        
        // Clear session storage and UI after form submission
        setTimeout(() => {
            sessionStorage.removeItem('workoutHTML');
            sessionStorage.removeItem('workoutValues');
            sessionStorage.removeItem('showSaveSection');
            
            // Clear the workout entries from the page
            document.getElementById('workoutEntries').innerHTML = '';
            document.getElementById('saveWorkoutSection').style.display = 'none';
            updateWorkoutStatus(false);
        }, 100);

    }
    function clearWorkoutData(event) {
        // Clear session storage and UI immediately
        sessionStorage.removeItem('workoutHTML');
        sessionStorage.removeItem('workoutValues');
        sessionStorage.removeItem('showSaveSection');
        
        // Clear the workout entries from the page
        document.getElementById('workoutEntries').innerHTML = '';
        document.getElementById('saveWorkoutSection').style.display = 'none';
        updateWorkoutStatus(false);
    }
    
    function sortWarmupFirst(container){
        const rows = Array.from(container.querySelectorAll('.set-row'));

        const warmups = rows.filter(r => r.classList.contains('warmup'));
        const sets = rows.filter(r => !r.classList.contains('warmup'));

        container.innerHTML = "";

        warmups.forEach(r => container.appendChild(r));
        sets.forEach(r => container.appendChild(r));

    }
</script>