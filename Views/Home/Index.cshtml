@{
    ViewData["Title"] = "Papi's Power Practice";
}

<div class="container text-center py-5">
    <h1 class="fw-bold mb-2">PapisPowerPractice</h1>
    <p class="text-muted mb-5">
        Din träningslogg, kcal-räknare, tutorials och AI-plan på ett ställe.
    </p>

    <div class="row justify-content-center g-4">
        <div class="col-6">
            <a asp-controller="WorkoutLog" asp-action="WorkoutLog" class="btn btn-primary w-100 py-4 rounded-4 shadow">
                <div class="fs-2 mb-2">🏋️‍♂️</div>
                <div class="fw-bold">Träningslogg</div>
            </a>
        </div>
        <div class="col-6">
            <a asp-controller="Home" asp-action="CalorieIntake" class="btn btn-primary w-100 py-4 rounded-4 shadow">
                <div class="fs-2 mb-2">🔥</div>
                <div class="fw-bold">Kcal-räknare</div>
            </a>
        </div>
        <div class="col-6">
            <a asp-controller="Home" asp-action="Tutorials" class="btn btn-primary w-100 py-4 rounded-4 shadow">
                <div class="fs-2 mb-2">📘</div>
                <div class="fw-bold">Träningsform</div>
            </a>
        </div>
        <div class="col-6">
            <a asp-controller="Home" asp-action="Chat" class="btn btn-primary w-100 py-4 rounded-4 shadow">
                <div class="fs-2 mb-2">🤖</div>
                <div class="fw-bold">AI-plan</div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // slå på färg darkmode på just denna sida
        document.body.classList.add('theme-dark');
    </script>
}
